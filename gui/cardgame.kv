#:kivy 2.3.1        

<CardGame>:
    hand: hand
    play_area: play_area
    title: title
    player_info: player_info
    enemy_info: enemy_info
    discard_pile: discard_pile
    deck: deck
    combat_log: combat_log
    animation_layer: animation_layer

    FloatLayout:
        size: self.parent.size
        pos: self.parent.pos

        Widget:
            id: play_area
            pos: 316, 324
            size: 868, 528
            size_hint: None, None
            canvas:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.center_x - self.width / 2, self.center_y - self.height / 2
                    size: self.size

        Label:
            id: title
            text: 'Card Game'
            font_size: 32
            color: (1, 1, 1, 1)
            pos: 0, 860
            size: 1500, 40
            size_hint: None, None
            canvas.before:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: player_info
            pos: 8, 324
            size: 300, 528
            size_hint: None, None
            canvas:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: enemy_info
            pos: 1192, 324
            size: 300, 528
            size_hint: None, None
            canvas:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: discard_pile
            pos: 1292, 8
            size: 200, 300
            size_hint: None, None
            canvas.before:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                RoundedRectangle:
                    pos: self.center_x - self.width / 2, self.center_y - self.height / 2
                    size: self.size
                    radius: [20, 20, 20, 20]

        Widget:
            id: deck
            pos: 8, 8
            size: 200, 300
            size_hint: None, None
            canvas.before:
                Color:
                    rgba: (0.1, 0.1, 0.1, 1)
                RoundedRectangle:
                    pos: self.center_x - self.width / 2, self.center_y - self.height / 2
                    size: self.size
                    radius: [20, 20, 20, 20]
            canvas:
                Color:
                    rgba: (0.62, 0.569, 0.443, 1.0) #(0.656, 0.547, 0.469, 1.0)
                RoundedRectangle:
                    pos: self.center_x - self.width / 2, self.center_y - self.height / 2
                    size: self.size
                    radius: [15, 15, 15, 15]
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    source: 'assets/cardbg.png'
                    pos: self.center_x - self.width / 2 + 4, self.center_y - self.height / 2 + 4
                    size: self.width - 8, self.height - 8
                    radius: [13, 13, 13, 13]
                Rectangle:
                    source: 'assets/cardback1.png'
                    pos: self.pos
                    size: self.size

        Button:
            text: 'End Turn'
            size_hint: None, None
            size: 160, 35
            pos: 1312, 324
            on_release: root.end_turn()
            background_normal: 'assets/btn_up.9.png'
            background_color: (1, 1, 1, 1)
            color: (0.715, 0.676, 0.535, 1.0)
            font_size: 21
            font_name: 'assets/romanantique.ttf'
            bold: False
            background_down: 'assets/btn_down.9.png'
            border: (27, 50, 4, 4)

        BoxLayout:
            id: combat_log
            orientation: 'vertical'
            pos: 316, 324
            size: 868, self.minimum_height
            size_hint: None, None
            Label:
                text: 'test1'
                font_size: 16
                color: (1, 1, 1, 1)
                size: self.parent.width, self.texture_size[1]
                size_hint: None, None

        Hand:
            id: hand
            pos: 234, 8
            size: 1032, 300
            size_hint: None, None
        
        AnimationLayer:
            id: animation_layer
            size: self.parent.size
            size_hint: None, None



