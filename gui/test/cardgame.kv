#:kivy 2.3.1

<Card>:
    size_hint: None, None
    size: 200, 300
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 if self.is_hovered else 0  # Change color based on is_hovered
        RoundedRectangle:
            pos: self.center_x - self.width / 2 - 2, self.center_y - self.height / 2 - 2
            size: self.width + 4, self.height + 4
            radius: [20, 20, 20, 20]
    canvas:
        Color:
            rgba: (0.73, 0.32, 0.07, 1)
        RoundedRectangle:
            pos: self.center_x - self.width / 2, self.center_y - self.height / 2
            size: self.size
            radius: [20, 20, 20, 20]
        Color:
            rgba: (0, 0, 0, 1)
        RoundedRectangle:
            pos: self.center_x - self.width / 2 + 4, self.center_y - self.height / 2 + 4
            size: self.width - 8, self.height - 8
            radius: [18, 18, 18, 18]

<PlayArea>:
    size: 300, 200
    canvas:
        Color:
            rgba: (0.5, 0.5, 0.5, 1)
        Rectangle:
            pos: self.center_x - self.width / 2, self.center_y - self.height / 2
            size: self.size

<CardGame>:
    hand: hand
    play_area: play_area

    PlayArea:
        id: play_area
        center: self.parent.center

    Hand:
        id: hand
        size_hint: None, None
        width: self.minimum_width
        height: 300
        pos_hint: {'center_x': 0.5, 'y': 0}
        center_x: self.parent.center_x
        orientation: 'horizontal'
        spacing: 8

