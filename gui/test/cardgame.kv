#:kivy 2.3.1

<Card>:
    size_hint: None, None
    size: 200, 300
    canvas:
        Color:
            rgba: 1, 1, 1, 1 if self.is_hovered else 0
        RoundedRectangle:
            pos: self.center_x - self.width / 2 - 2, self.center_y - self.height / 2 - 2
            size: self.width + 4, self.height + 4
            radius: [20, 20, 20, 20]
        Color:
            rgba: (0.73, 0.32, 0.07, 1)
        RoundedRectangle:
            pos: self.center_x - self.width / 2, self.center_y - self.height / 2
            size: self.size
            radius: [20, 20, 20, 20]
        Color:
            rgba: (0, 0, 0, 1)
        RoundedRectangle:
            pos: self.center_x - self.width / 2 + 4, self.center_y - self.height / 2 + 4
            size: self.width - 8, self.height - 8
            radius: [18, 18, 18, 18]

<PlayArea>:
    size: 800, 360
    canvas:
        Color:
            rgba: (0.5, 0.5, 0.5, 1)
        Rectangle:
            pos: self.center_x - self.width / 2, self.center_y - self.height / 2
            size: self.size

<CardGame>:
    hand: hand
    play_area: play_area

    FloatLayout:
        size: self.parent.size
        pos: self.parent.pos

        PlayArea:
            id: play_area
            pos: 208, 308
            size: 1084, 544
            size_hint: None, None

        Widget:
            id: title
            pos: 208, 860
            size: 1084, 40
            size_hint: None, None
            canvas:
                Color:
                    rgba: (0, 1, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: menu_button
            pos: 1300, 860
            size: 200, 40
            size_hint: None, None
            canvas:
                Color:
                    rgba: (0, 0, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: options
            pos: 0, 860
            size: 200, 40
            size_hint: None, None
            canvas:
                Color:
                    rgba: (1, 1, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: player_info
            pos: 0, 308
            size: 200, 544
            size_hint: None, None
            canvas:
                Color:
                    rgba: (1, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: enemy_info
            pos: 1300, 308
            size: 200, 544
            size_hint: None, None
            canvas:
                Color:
                    rgba: (0, 1, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: discard_pile
            pos: 1300, 0
            size: 200, 300
            size_hint: None, None
            canvas:
                Color:
                    rgba: (1, 0, 1, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Widget:
            id: deck
            pos: 0, 0
            size: 200, 300
            size_hint: None, None
            canvas:
                Color:
                    rgba: (1, 0.5, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Hand:
            id: hand
            pos: 208, 0
            size: 1084, 300
            size_hint: None, None
            orientation: 'horizontal'
            spacing: 8
            


        